<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tianzunchina.sample">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 查询手机ID权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".app.SysApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sample">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".event.EventActivity"
            android:label="@string/title_activity_event"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TimeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".form.DynamicFormActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tianzunchina.android.api.widget.photo.PreviewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".app.download.UpdateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".notify.NotifyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".app.download.DownloadFileActivity"></activity>
    </application>

</manifest>